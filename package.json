{
  "name": "medical-appointment-scheduling",
  "version": "1.0.0",
  "description": "Medical appointment scheduling backend using Serverless Framework, TypeScript, and AWS",
  "private": true,
  "scripts": {
    "build": "tsc",
    "bootstrap": "npm install && npm run build",
    "deploy": "./scripts/deploy.sh",
    "deploy:dev": "npm run build && serverless deploy --stage dev",
    "deploy:prod": "npm run build && serverless deploy --stage prod",
    "deploy:infrastructure": "cd infrastructure && serverless deploy --stage dev",
    "deploy:infrastructure:prod": "cd infrastructure && serverless deploy --stage prod",
    "lint": "eslint 'functions/**/*.ts' 'libs/**/*.ts' --fix",
    "lint:check": "eslint 'functions/**/*.ts' 'libs/**/*.ts'",
    "lint:fix": "eslint 'functions/**/*.ts' 'libs/**/*.ts' --fix",
    "format": "prettier --write 'functions/**/*.ts' 'libs/**/*.ts' '*.ts' '*.json'",
    "format:check": "prettier --check 'functions/**/*.ts' 'libs/**/*.ts' '*.ts' '*.json'",
    "remove": "serverless remove",
    "remove:infrastructure": "cd infrastructure && serverless remove --stage dev",
    "remove:infrastructure:prod": "cd infrastructure && serverless remove --stage prod",
    "test": "jest --testPathPattern=__tests__ --testPathIgnorePatterns='test.constants.ts|test.factories.ts'",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern=__tests__ --testPathIgnorePatterns='test.constants.ts|test.factories.ts'",
    "test:ci": "jest --testPathPattern=__tests__ --testPathIgnorePatterns='test.constants.ts|test.factories.ts' --coverage --ci",
    "test:integration": "jest --testPathPattern=test/integration --verbose",
    "test:e2e": "jest --testPathPattern=test/e2e --verbose",
    "test:e2e:dev": "STAGE=dev jest --testPathPattern=test/e2e --verbose",
    "test:smoke:prod": "STAGE=prod jest --testPathPattern=test/smoke --verbose",
    "logs:appointment": "serverless logs -f appointment --tail",
    "logs:appointment-pe": "serverless logs -f appointment-pe --tail",
    "logs:appointment-cl": "serverless logs -f appointment-cl --tail",
    "logs:appointment-completion": "serverless logs -f appointment-completion --tail",
    "invoke:appointment": "serverless invoke -f appointment",
    "package": "serverless package",
    "info": "serverless info"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.145",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.14.0",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^7.13.0",
    "@typescript-eslint/parser": "^7.13.0",
    "esbuild": "^0.21.5",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "prettier": "^3.3.2",
    "serverless": "^3.38.0",
    "serverless-esbuild": "^1.52.1",
    "serverless-offline": "^13.6.0",
    "serverless-prune-plugin": "^2.1.0",
    "ts-jest": "^29.1.5",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "@aws-lambda-powertools/logger": "^2.26.0",
    "@aws-lambda-powertools/metrics": "^2.7.0",
    "@aws-lambda-powertools/tracer": "^2.7.0",
    "@aws-sdk/client-dynamodb": "^3.600.0",
    "@aws-sdk/client-eventbridge": "^3.600.0",
    "@aws-sdk/client-rds": "^3.888.0",
    "@aws-sdk/client-rds-data": "^3.600.0",
    "@aws-sdk/client-sns": "^3.600.0",
    "@aws-sdk/client-sqs": "^3.600.0",
    "@aws-sdk/lib-dynamodb": "^3.600.0",
    "mysql2": "^3.10.0",
    "uuid": "^10.0.0",
    "zod": "^4.1.8"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
