{
  "name": "medical-appointment-scheduling",
  "version": "1.0.0",
  "description": "Medical appointment scheduling backend using Serverless Framework, TypeScript, and AWS",
  "private": true,
  "scripts": {
    "build": "pnpm run build:functions && pnpm run build:libs",
    "build:functions": "pnpm --filter='./functions/*' run build",
    "build:libs": "pnpm --filter='./libs/*' run build",
    "deploy": "./scripts/deploy.sh",
    "deploy:dev": "pnpm run build && serverless deploy --stage dev",
    "deploy:prod": "pnpm run build && serverless deploy --stage prod",
    "lint": "pnpm --recursive run lint",
    "lint:fix": "pnpm --recursive run lint:fix",
    "remove": "serverless remove",
    "test": "pnpm --recursive run test",
    "test:coverage": "pnpm --recursive run test:coverage",
    "test:integration": "pnpm --recursive run test:integration",
    "test:unit": "pnpm --recursive run test:unit"
  },
  "workspaces": [
    "functions/*",
    "libs/*"
  ],
  "devDependencies": {
    "@types/aws-lambda": "^8.10.145",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.14.0",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^7.13.0",
    "@typescript-eslint/parser": "^7.13.0",
    "esbuild": "^0.21.5",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "prettier": "^3.3.2",
    "serverless": "^3.38.0",
    "serverless-esbuild": "^1.52.1",
    "serverless-offline": "^13.6.0",
    "serverless-prune-plugin": "^2.1.0",
    "ts-jest": "^29.1.5",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "@aws-lambda-powertools/logger": "^2.7.0",
    "@aws-lambda-powertools/metrics": "^2.7.0",
    "@aws-lambda-powertools/tracer": "^2.7.0",
    "@aws-sdk/client-dynamodb": "^3.600.0",
    "@aws-sdk/client-eventbridge": "^3.600.0",
    "@aws-sdk/client-rds": "^3.600.0",
    "@aws-sdk/client-sns": "^3.600.0",
    "@aws-sdk/client-sqs": "^3.600.0",
    "@aws-sdk/lib-dynamodb": "^3.600.0",
    "mysql2": "^3.10.1",
    "uuid": "^10.0.0",
    "zod": "^3.23.8"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@9.4.0"
}
